<h1 class="deal-title">Locations</h1>
<div class="corner-button">
  <%= button_to 'New Location', new_admin_location_path, method: :get, class: 'btn btn-primary' %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr class="<%= cycle('table-primary', 'table-secondary') -%>">
        <th scope="row"><%= location.name %></th>
        <td><%= location.address.readable_format %></td>
        <td>
          <%= link_to 'Show', [:admin, location] %> |
          <%= link_to 'Edit', edit_admin_location_path(location) %> |
          <%= link_to 'Destroy', [:admin, location], method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-link' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
