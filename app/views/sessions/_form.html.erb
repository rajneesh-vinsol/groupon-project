<div class="signup-login-form">
  <%= form_tag do %>
    <legend><%= t('.login_form_legend') %></legend>
    <div class="form-container">

      <div class="field">
        <%= label_tag :email, 'Email:', class: 'col-form-label' %>
        <%= email_field_tag :email, params[:email], class: 'form-control', placeholder: 'Enter email' %>
      </div>

      <div class="field">
        <%= label_tag :password, 'Password:', class: 'col-form-label' %>
        <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Enter password' %>
      </div>
      
      <div class="field">
        <%= label_tag :remember_me, class: "checkbox inline" do %>
          <%= check_box_tag :remember_me, params[:remember_me] %>
          <span>Remember me on this computer</span>
        <% end %>
      </div>

      <%= link_to 'Forgot password?', new_password_reset_path %>

    </div>
    <div class="actions">
      <%= submit_tag t('.login'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
