<%= form_for @order, url: { action: 'update_address' } do |form| %>
  <%= form.fields_for :address do |address_form| %>
    <div class="field">
      <%= address_form.label :street_address, class: 'col-form-label'%>
      <%= address_form.text_field :street_address, class: 'form-control', placeholder: 'Enter street address' %>
    </div>
    <div class="field">
      <%= address_form.label :city, class: 'col-form-label' %>
      <%= address_form.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
    </div>
    <div class="field">
      <%= address_form.label :state, class: 'col-form-label' %>
      <%= address_form.text_field :state, class: 'form-control', placeholder: 'Enter state' %>
    </div>
      <%= address_form.label :country, class: 'col-form-label' %>
      <%= address_form.text_field :country, class: 'form-control', placeholder: 'Enter country' %>
    <div class="field">
      <%= address_form.label :pincode, class: 'col-form-label' %>
      <%= address_form.text_field :pincode, class: 'form-control', placeholder: 'Enter pincode' %>
    </div>
    <div class="field">
      <%= address_form.label :contact_person_name, class: 'col-form-label' %>
      <%= address_form.text_field :contact_person_name, class: 'form-control', placeholder: 'Enter contact person name' %>
    </div>
    <div class="field">
      <%= address_form.label :contact_number, class: 'col-form-label' %>
      <%= address_form.text_field :contact_number, class: 'form-control', placeholder: 'Enter contact number' %>
      </div>
  <% end %>
  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

