<div class="form-main">
  <h2>Order Payment</h2>
  <div class="signup-login-form">
    <%= form_tag payments_path do %>
      <article>
        <label class="amount">
          <span>Amount: <%= number_to_currency(@order.amount) %></span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-description="Order payment"
        data-amount="<%= @order.amount * 100 %>"
        data-locale="auto">
      </script>
    <% end %>
  </div>
</div>
